FROM python:3.11-slim

# системные зависимости
RUN apt-get update && apt-get install -y build-essential gcc libpq-dev && rm -rf /var/lib/apt/lists/*

# рабочая директория
WORKDIR /app

# копируем только зависимости для кэширования слоя
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# копируем код
COPY . /app

# экспорт переменных окружения (если нужно)
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# порт, на котором будет слушать uvicorn
EXPOSE 8000

# команда запуска (можно заменить на скрипт)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
