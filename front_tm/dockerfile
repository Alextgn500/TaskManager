# Этап сборки
FROM node:18-alpine AS build

WORKDIR /app

# Чтобы корректно кешировать зависимости
COPY package*.json ./

# Нужны dev-зависимости для сборки
RUN npm ci --silent

# Копируем исходники
COPY . .

# Переменные окружения для prod-сборки (если CRA)
# ENV NODE_ENV=production
# Но для CRA лучше:
# ENV CI=true

# Собираем
RUN npm run build

# Этап рантайма со статикой
FROM nginx:alpine

# Для корректной работы некоторых npm/SSL (опционально)
# RUN apk add --no-cache bash

# Чистим дефолтный контент
RUN rm -rf /usr/share/nginx/html/*

# Копируем сборку
COPY --from=build /app/build /usr/share/nginx/html

# Копируем конфиг nginx с поддержкой SPA
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]